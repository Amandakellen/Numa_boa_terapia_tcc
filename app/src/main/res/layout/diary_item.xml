<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_list_diary_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="#BB9FF3"
    android:outlineAmbientShadowColor="@color/purple"
    android:outlineSpotShadowColor="@color/purple"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/linear_layout_diary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB9FF3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/feeling_image_diary"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:src="@mipmap/amor" />

        <TextView
            android:id="@+id/feeling_label_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/chau_philomene_one"
            tools:text="@string/amor" />


    </LinearLayout>


</androidx.cardview.widget.CardView>