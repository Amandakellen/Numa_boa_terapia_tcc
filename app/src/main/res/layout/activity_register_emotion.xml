<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".appNavigation.pacient.views.RegisterEmotionActivity">

    <com.example.numaboaterapia.views.CustomView.RegisterInformationToolBar
        android:id="@+id/patient_diary_register_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diary_register_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diary_subtitle"
                android:fontFamily="@font/chau_philomene_one"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#BB9FF3"
                android:textStyle="bold"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/patient_diary_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/purple"
                app:strokeWidth="8dp"
                app:cardElevation="16dp">

                <EditText
                    android:id="@+id/patient_diary_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/transparent"
                    android:maxLength="950"
                    android:gravity="center"
                    android:hint="@string/diary_edit_text_hint"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray" />

            </androidx.cardview.widget.CardView>


                <com.example.numaboaterapia.views.CustomView.BotaoArredondadoRoxo
                    android:id="@+id/save_diary_register_button"
                    android:layout_width="409dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="16dp"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>