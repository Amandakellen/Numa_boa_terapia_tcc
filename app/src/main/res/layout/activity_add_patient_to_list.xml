<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".appNavigation.psychologist.views.AddPatientToListActivity">

    <com.example.numaboaterapia.views.CustomView.RegisterInformationToolBar
        android:id="@+id/add_patient_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/information_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_mode_edit_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/information_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/chau_philomene_one"
                android:gravity="center"
                android:text="@string/information_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.003"
                app:layout_constraintStart_toEndOf="@id/information_image"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_name_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp"
                android:hint="@string/name_string"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/information_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_email_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/email_string"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_name_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_gender_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/gender"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_email_layout"
                app:layout_constraintStart_toStartOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_gender_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_date_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/birthday"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_gender_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_date_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_wpp_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/wpp_patient"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_date_layout"
                app:layout_constraintStart_toStartOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_wpp_edit_text"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_cpf_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="CPF"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_date_layout"
                app:layout_constraintStart_toEndOf="@id/add_patient_wpp_layout"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_cpf_edit_text"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_profession_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/profession"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_wpp_layout"
                app:layout_constraintStart_toStartOf="parent"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_profession_edit_text"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_schooling_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/schooling"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_wpp_layout"
                app:layout_constraintStart_toEndOf="@id/add_patient_profession_layout"
                app:layout_constraintEnd_toEndOf="parent"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_schooling_edit_text"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_country_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/country"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_profession_layout"
                app:layout_constraintStart_toStartOf="parent"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_country_edit_text"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_value_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/chau_philomene_one"
                android:hint="@string/value"
                android:inputType="text"
                android:paddingBottom="4dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_patient_country_layout"

                app:layout_constraintTop_toBottomOf="@id/add_patient_schooling_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_value_edit_text"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/add_observation_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:outlineAmbientShadowColor="@color/purple"
                android:outlineSpotShadowColor="@color/purple"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/add_patient_country_layout">

                <EditText
                    android:id="@+id/observation_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/transparent"
                    android:maxLength="850"
                    android:hint="@string/adicional"
                    android:textColor="@color/light_gray"
                    android:textColorHint="@color/light_gray" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/location_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_location_on_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_observation_cardview" />

            <TextView
                android:id="@+id/location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/chau_philomene_one"
                android:gravity="center"
                android:text="@string/location_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.003"
                app:layout_constraintStart_toEndOf="@id/location_image"
                app:layout_constraintTop_toBottomOf="@id/add_observation_cardview" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_address_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp"
                android:hint="@string/address"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/location_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_address_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_number_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/number"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_address_layout"
                app:layout_constraintStart_toStartOf="parent"

                >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_patient_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_neighborhood_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/neighborhood"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_address_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_patient_number_layout"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_neighborhood_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_city_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/city_label"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_number_layout"
                app:layout_constraintStart_toStartOf="parent"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_city_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_uf_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:hint="@string/uf"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/add_patient_number_layout"
                app:layout_constraintStart_toEndOf="@id/add_patient_city_layout"
                app:layout_constraintEnd_toEndOf="parent"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_uf_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_message_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_patient_city_layout" />

            <TextView
                android:id="@+id/contact_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/chau_philomene_one"
                android:gravity="center"
                android:text="@string/contact_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.003"
                app:layout_constraintStart_toEndOf="@id/contact_image"
                app:layout_constraintTop_toBottomOf="@id/add_patient_city_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_contact_name_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp"
                android:hint="@string/name_string"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
                app:layout_constraintTop_toBottomOf="@id/contact_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_patient_contact_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_patient_contact_wpp_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp"
                android:hint="@string/wpp_patient"
                android:inputType="text"
                android:textColor="@color/gray"
                android:textColorHint="@color/purple"
                app:boxStrokeColor="@color/purple"
                app:helperTextTextColor="@color/gray"
                app:hintTextColor="@color/purple"
