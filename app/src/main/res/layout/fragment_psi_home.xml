<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".appNavigation.psychologist.fragment.PsiHomeFragment">

    <com.example.numaboaterapia.views.CustomView.CustomToolBar
        android:id="@+id/tool_bar_psi_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pacient_search_psi_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chau_philomene_one"
                android:text="@string/sections_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.042" />

            <ImageView
                android:id="@+id/sections_number_layout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rounded_shape"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section_title"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/sections_number_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_calendar_month"
                app:layout_constraintEnd_toEndOf="@id/sections_number_layout"
                app:layout_constraintTop_toTopOf="@id/sections_number_layout"
                app:layout_constraintStart_toStartOf="@id/sections_number_layout"
                app:layout_constraintBottom_toBottomOf="@id/sections_number_layout" />

            <ImageView
                android:id="@+id/sections_done_layout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rounded_green"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/sections_number_layout"
                app:layout_constraintTop_toBottomOf="@id/section_title"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/sections_done_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_done"
                app:layout_constraintEnd_toEndOf="@id/sections_done_layout"
                app:layout_constraintTop_toTopOf="@id/sections_done_layout"
                app:layout_constraintStart_toStartOf="@id/sections_done_layout"
                app:layout_constraintBottom_toBottomOf="@id/sections_done_layout" />

            <ImageView
                android:id="@+id/sections_info_layout"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/baseline_info_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.356"
                app:layout_constraintStart_toEndOf="@id/sections_done_layout"
                app:layout_constraintTop_toBottomOf="@id/section_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>