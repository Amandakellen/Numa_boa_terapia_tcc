<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".register.psychologist.view.SelectSignature">

    <com.example.numaboaterapia.views.CustomView.CustomToolBar
        android:id="@+id/tool_bar_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/chau_philomene_one"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="center"
        android:text="@string/signature_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/purple"
        android:textSize="32sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signature_year_cardview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/signature_radio_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:outlineSpotShadowColor="@color/light_purple"
                android:outlineAmbientShadowColor="@color/light_purple"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/signature_year_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/signature_radio_year"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.107"
                app:layout_constraintStart_toEndOf="@id/signature_radio_year"
                app:layout_constraintTop_toTopOf="@id/signature_radio_year"
                android:text="@string/year_value"
                android:textSize="20sp"
                android:fontFamily="@font/chau_philomene_one"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                app:layout_constraintVertical_bias="0.448" />

            <TextView
                android:id="@+id/signature_year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chau_philomene_one"
                android:text="@string/year_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/signature_year_value"
                app:layout_constraintTop_toBottomOf="@id/signature_year_value"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/signature_semester_cardview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/signature_radio_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:outlineSpotShadowColor="@color/light_purple"
                android:outlineAmbientShadowColor="@color/light_purple"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/signature_semester_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/signature_radio_semester"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.107"
                app:layout_constraintStart_toEndOf="@id/signature_radio_semester"
                app:layout_constraintTop_toTopOf="@id/signature_radio_semester"
                android:text="@string/semester_value"
                android:textSize="20sp"
                android:fontFamily="@font/chau_philomene_one"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                app:layout_constraintVertical_bias="0.448" />

            <TextView
                android:id="@+id/signature_semester_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chau_philomene_one"
                android:text="@string/semester_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/signature_semester_value"
                app:layout_constraintTop_toBottomOf="@id/signature_semester_value"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/signature_mounth_cardview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/signature_radio_mounth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:outlineSpotShadowColor="@color/light_purple"
                android:outlineAmbientShadowColor="@color/light_purple"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/signature_mouth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/signature_radio_mounth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.107"
                app:layout_constraintStart_toEndOf="@id/signature_radio_mounth"
                app:layout_constraintTop_toTopOf="@id/signature_radio_mounth"
                android:text="@string/mounth_value"
                android:textSize="20sp"
                android:fontFamily="@font/chau_philomene_one"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                app:layout_constraintVertical_bias="0.448" />

            <TextView
                android:id="@+id/signature_mounth_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chau_philomene_one"
                android:text="@string/mounth_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/signature_mouth_value"
                app:layout_constraintTop_toBottomOf="@id/signature_mouth_value"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.example.numaboaterapia.views.CustomView.BotaoArredondadoRoxo
        android:id="@+id/signature_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp" />

</LinearLayout>